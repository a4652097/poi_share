<div style="text-align: center;">
  <h2>登陆</h2>
  <%= image_tag 'sign_up.png'%>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      邮箱 : <%= f.email_field :email, autofocus: true, class:"form-control"  %>
    </div>

    <div class="field">
      <br/>
      密码 : <%= f.password_field :password, autocomplete: "off", class:"form-control"  %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= render "devise/shared/links" %>
        <%= f.check_box :remember_me %>
        <%= f.label :记住我 %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "登陆", class:"btn btn-primary", style:"width: 17%;"%>
    </div>
  <% end %>

</div>

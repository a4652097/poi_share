<div style="text-align: center;">
  <h2>注册</h2>
  <%= image_tag 'sign_up.png'%>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      邮&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;箱 : <%= f.email_field :email, autofocus: true, class:"form-control" %>
    </div>

    <div class="field">
    <br/>
      昵&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;称 : <%= f.text_field :nickname, autofocus: true, class:"form-control" %>
    </div>

    <div class="field">
      <% if @validatable %>
      <% end %><br />
      密&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;码 : <%= f.password_field :password, autocomplete: "off", class:"form-control", :placeholder=> "密码长度不小于#{@minimum_password_length} 个字符" %>
    </div>

    <div class="field">
      <br />
      重复密码：<%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
    </div>
      <br />
    <div class="actions">
      <%= f.submit "确定", class:"btn btn-primary", style:"margin-right: 40px;" %><%= render "devise/shared/links" %>
    </div>
  <% end %>

  
</div>
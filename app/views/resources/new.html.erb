<div style="text-align:center">
  <%= form_for @post do |f|%>
    <div style="margin-top: 5%;">
      <label>标题 : </label>
      <%= f.text_field :title, class:"form-control", style:"margin-right: 11%;"%>
      <label>分类 : </label>
       <%= f.select(:classification, @classification.map{|c| [c.name,c.id]}, {} ,{class:"form-control", style:"width: 100px;"})%>
      <div style="width:36%;margin-left:32%;margin-top: 2%;">
        <%= f.kindeditor :content, :allowFileManager => false%>
      </div>
      <%= f.submit '分享',class:"btn btn-info", style:"width:36%;margin-top: 1%;"%>
    </div>
  <% end %>
</div>
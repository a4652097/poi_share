<div style="text-align:center">
  <%= form_for @resource do |f|%>
    <div style="margin-top: 5%;">
      <label>标题 : </label>
      <%= f.text_field :title, class:"form-control", style:"margin-right: 11%;", id:"title"%>
      <label>分类 : </label>
       <%= f.select(:classification_id, @classification.map{|c| [c.name,c.id]}, {} ,{class:"form-control", style:"width: 100px;", value:"#{params[:classification]}"})%>
       <p style="margin-left: -22%;color: #5BC0DE;margin-top: 1%;">提示:标题不能超过27个字符</p>
      <div style="width:36%;margin-left:32%;margin-top: 1%;">
        <%= f.kindeditor :content, :allowFileManager => false%>
      </div>
      <%= f.submit '分享',class:"btn btn-info", style:"width:36%;margin-top: 1%;"%>
    </div>
  <% end %>
</div>
<script type="text/javascript">
 $(function(){
  $("#title").keyup(function(){
   var len = $(this).val().length;
   if(len > 26){
    $(this).val($(this).val().substring(0,27));
   }
  });
 });
</script>
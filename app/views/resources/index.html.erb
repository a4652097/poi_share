<%= image_tag "logo.jpg", style:"width:100%;height:250px;"%>
<nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1" style="margin-left:25%;">
        <ul class="nav navbar-nav">
          <li class="active"><a href="#">全部<span class="sr-only">(current)</span></a></li>
          <li><a href="#">软件</a></li>
          <li><a href="#">书籍</a></li>
          <li><a href="#">电影</a></li>
          <li><a href="#">教育</a></li>
          <li><a href="#">游戏</a></li>
        </ul>
        <form class="navbar-form navbar-left" role="search" style="margin-left: 22%;">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="关键字搜索">
          </div>
          <button type="submit" class="btn btn-default">搜索</button>
        </form>

      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
<div>
  <div class="left_content">
    <div style="background-color:#D9EDF7;height:40px;width:100%;">
      <a href="" class="a" style="text-decoration: none;margin-left: 10px;">全部</a>
      <a href="" class="a" style="text-decoration: none;margin-left: 5px;">最新</a>
      <a href="" class="a" style="text-decoration: none;margin-left: 5px;">热门</a>
      <a href="" class="a" style="text-decoration: none;margin-left: 5px;">精华</a>
      <span style="text-decoration: none;margin-left: 210px;">作者/日期</span>
      <span style="text-decoration: none;margin-left: 35px;">回复</span>
      <span style="text-decoration: none;margin-left: 35px;">最后回复</span>
    </div>
    <% @resources.each do |r|%>
    <div style="height:40px;width:100%;border-bottom: 1px solid #eeeeee;">
      <div style="width:58%;height:100%;float:left">
        <span style="color:#F4A460">[<%= r.classification.name%>]</span>
        <a href="" style="font-size:110%;color:#000;line-height: 2.5;">
          <% if r.title.length>17%>
            <%= r.title[0..17]+'...'%>
          <% else %>
            <%= r.title%>
          <% end %>
        </a>
      </div>
      <div style="width:15%;height:100%;float:left"></div>
      <div style="width:12%;height:100%;float:left"></div>
      <div style="width:15%;height:100%;float:left"></div>
    </div>
    <% end %>
  </div>
</div>
<div style="float: left;">
<% if user_signed_in?%>
  <div class="right_top">
    <div class="panel panel-info">
      <div class="panel-heading ">分享一下<span class="glyphicon glyphicon-arrow-down"></span></div>
      <div class="panel-body">
        <div class="btn-group">
          <button type="button" class="btn btn-danger"><%= link_to '发布新帖', new_resource_path, 'data-no-turbolink' => true, style:"color: #fff;text-decoration: none;"%></button>
          <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
            <span class="caret"></span>
            <span class="sr-only">Toggle Dropdown</span>
          </button>
          <ul class="dropdown-menu" role="menu">
          <% @classifications.each do |c|%>
            <li><a href="<%=new_resource_path(c.id)%>" data-no-turbolink=true><%= c.name%></a></li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% else %>
<% end %>
  <div class="right_content"></div>
</div>
